{
  "name": "Quick Link Previews",
  "short_name": "Quick Link Preview",
  "version": "0.1",
  "manifest_version": 2,
  "permissions": [
    "tabs", "contentSettings", "http://*/*"
  ],

  "content_scripts": [{
    "matches": ["*://*/*"],
    "css": [
      "build/ext-css.css"
    ],
    "js": [
      "build/ext.js"
    ],
    "run_at": "document_end"
  }],

  "web_accessible_resources": [
    "build/frame/index.html",
    "build/frame/main.js",
    "build/frame/total.css"
  ]
}